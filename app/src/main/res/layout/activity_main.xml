<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aditya.scarnesdice.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Score: 0"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:id="@+id/user_score"/>

    <TextView
        android:id="@+id/cpu_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_score"
        android:layout_alignTop="@+id/user_score"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="200dp"
        android:text="Computer Score: 0" />

    <Button
        android:id="@+id/roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_score"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/user_score"
        android:layout_marginBottom="169dp"
        android:text="Roll" />

    <Button
        android:id="@+id/hold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/roll"
        android:layout_centerHorizontal="true"
        android:text="Hold" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cpu_score"
        android:layout_alignRight="@+id/cpu_score"
        android:layout_alignTop="@+id/hold"
        android:text="Reset" />

    <ImageView
        android:id="@+id/die"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_score"
        android:layout_marginTop="44dp"
        android:src="@drawable/dice1" />

    <TextView
        android:id="@+id/win"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="150dp"
        android:text=""
        android:visibility="invisible"/>

</RelativeLayout>
